@model Movie

@{
    ViewData["Title"] = "Movie Form";
}

<style>
    /* Container styles */
    .container {
        width: 50%;
        margin: auto;
    }

    /* Form label styles */
    label {
        display: block;
        margin-top: 10px;
    }

    /* Form input styles */
    input[type="text"],
    select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 5px;
    }

    /* Form submit button styles */
    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px; 
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
    }

        input[type="submit"]:hover {
            background-color: #45a049;
        }
</style>

<div class="container">
    <h1>Movie Collection</h1>
    <form asp-action="MovieForm" asp-controller="Home" method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" class="form-control" />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" class="form-control" />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" class="form-control" />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" class="form-control">
            <option value="">Select Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>

        <label asp-for="LentTo">Lent to:</label>
        <input asp-for="LentTo" class="form-control" />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" class="form-control" />

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

</div>

