@{
    ViewData["Title"] = "Get To Know Joel";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light gray background */
           /*  padding: 20px; */
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px; /* Increased margin bottom for better separation */
        }

        .links {
            display: flex;
            justify-content: center;
            margin-bottom: 20px; /* Increased margin bottom for better separation */
        }

            .links a {
                margin: 0 20px; /* Increased horizontal margin for better spacing */
                text-decoration: none;
                color: #007bff;
                font-weight: bold;
                transition: color 0.3s ease; /* Smooth color transition on hover */
            }

                .links a:hover {
                    color: #0056b3; /* Darker blue color on hover */
                }

        .baconsale-image {
            display: block;
            margin: 0 auto; /* Center the image */
            max-width: 100%;
            height: auto;
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Added box shadow for a subtle effect */
        }
    </style>
</head>
<body>
    <div>
        <h1>Get To Know Joel!</h1>
        <div class="links">
            <a href="https://www.qwcomedy.com/">Quick Wits Comedy</a>
            <a href="https://baconsale.com/">Baconsale</a>
        </div>
        <a href="https://baconsale.com/">
            <img class="baconsale-image" src="~/images/2.jpg" alt="Baconsale site">
        </a>
    </div>
</body>
</html>

